<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <View
        android:id="@+id/home_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_200"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/news_icon"
        android:layout_width="128dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/news_icon"
        android:layout_alignTop="@id/news_icon"
        android:layout_alignBottom="@id/news_icon"
        >
        <TextView
            android:id="@+id/news_title"
            style="@style/text_normal_black"
            android:layout_alignParentLeft="true"
            android:lineSpacingExtra="8dp"
            android:layout_marginLeft="10dp"
            android:drawablePadding="4dp"
            />

        <TextView
            android:id="@+id/news_author"
            style="@style/text_small_gray"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/news_view_count"
            style="@style/text_small_gray"
            android:layout_toRightOf="@id/news_author"
            android:layout_marginLeft="24dp"
            android:layout_alignParentBottom="true"
            android:drawableLeft="@mipmap/icon_browse"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>

</RelativeLayout>