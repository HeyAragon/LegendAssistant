<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/game_tag_shape"
    android:layout_width="90dp"
    android:layout_height="144dp"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/horizontal_game_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:roundedCornerRadius="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        />
    <com.hackhome.legendassistant.widget.CenterTextView
        android:id="@+id/horizontal_game_title"
        style="@style/text_middle_black"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:layout_below="@id/horizontal_game_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/horizontal_game_score"
        style="@style/text_middle_orange"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@mipmap/icon_homeindex_star"
        android:drawableStart="@mipmap/icon_homeindex_star"
        android:layout_alignLeft="@id/horizontal_game_icon"
        android:layout_alignStart="@id/horizontal_game_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:drawablePadding="3dp"
        />

</RelativeLayout>