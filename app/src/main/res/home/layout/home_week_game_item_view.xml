<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/week_game_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:roundAsCircle="true"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        app:actualImageScaleType="centerInside"
        />
    <TextView
        android:id="@+id/week_game_title"
        style="@style/text_normal_black"
        android:layout_toRightOf="@id/week_game_icon"
        android:layout_alignTop="@id/week_game_icon"
        />
    <TextView
        android:id="@+id/week_game_count"
        style="@style/text_small_gray"
        android:layout_toRightOf="@id/week_game_title"
        android:layout_alignBottom="@id/week_game_title"
        />
    <TextView
        android:id="@+id/week_game_intro"
        style="@style/text_middle_gray"
        android:layout_alignLeft="@id/week_game_title"
        android:layout_alignBottom="@id/week_game_icon"
        />

</RelativeLayout>