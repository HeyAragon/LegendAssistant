<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/home_floor_one_relative_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_item_game_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            fresco:roundedCornerRadius="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"

            />
        <TextView
            android:id="@+id/home_item_game_title"
            style="@style/text_big_black"
            android:layout_toRightOf="@id/home_item_game_icon"
            android:layout_toEndOf="@id/home_item_game_icon"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/home_item_game_from"
            style="@style/text_small_gray"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            />

        <ImageView
            android:id="@+id/home_item_refresh_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toLeftOf="@id/home_item_game_from"
            android:layout_toStartOf="@id/home_item_game_from"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_homeindex_refresh"
            android:scaleType="centerInside"
            />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/home_floor_two_frame_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_floor_one_relative_container">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_item_big_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
        <TextView
            android:id="@+id/home_item_update_time"
            style="@style/text_small_white"
            android:layout_gravity="bottom"
            android:layout_margin="20dp"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/home_item_game_introduce"
        style="@style/text_middle_black"
        android:layout_below="@id/home_floor_two_frame_container"
        android:layout_margin="10dp"
        />

    <View
        android:id="@+id/home_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_200"
        android:layout_below="@id/home_item_game_introduce"

        />

    <RelativeLayout
        android:id="@+id/home_floor_three_relative_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_item_line"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/home_item_tag_one"
            style="@style/text_middle_gray"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/game_tag_shape"
            />
        <TextView
            android:id="@+id/home_item_tag_two"
            style="@style/text_middle_gray"
            android:layout_toRightOf="@id/home_item_tag_one"
            android:layout_toEndOf="@id/home_item_tag_one"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/game_tag_shape"
            />
        <TextView
            android:id="@+id/home_item_tag_three"
            style="@style/text_middle_gray"
            android:layout_toRightOf="@id/home_item_tag_two"
            android:layout_toEndOf="@id/home_item_tag_two"
            android:background="@drawable/game_tag_shape"
            />

        <TextView
            android:id="@+id/home_item_game_comments_count"
            style="@style/text_small_gray"
            android:drawableLeft="@mipmap/icon_comments"
            android:drawableStart="@mipmap/icon_comments"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/home_item_game_download_count"
            style="@style/text_small_gray"
            android:layout_toStartOf="@id/home_item_game_comments_count"
            android:layout_toLeftOf="@id/home_item_game_comments_count"
            android:drawableLeft="@mipmap/icon_user"
            android:drawableStart="@mipmap/icon_user"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>

    <include
        layout="@layout/base_line"
        />

</RelativeLayout>